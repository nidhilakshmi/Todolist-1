<h1>Edit Task</h1>

<%= form_with model: @todo do |form| %>

  <div>
    <%= form.label :task %><br>
    <%= form.text_field :task %>
    <% @todo.errors.full_messages_for(:task).each do |message| %>
      <div><%= message %></div>
    <% end %>

  </div>

  <div>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
    <% @todo.errors.full_messages_for(:description).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

   <div>
    <%= form.label :date %><br>
    <%= form.date_field :date %>
  </div>

  <div>
    <%= form.submit %>
  </div>
  <% end %>